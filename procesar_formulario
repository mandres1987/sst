<?php
// Verifica si se han recibido datos del formulario
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    // Obtén los datos del formulario
    $nombre = $_POST['nombre'];
    $correo = $_POST['correo'];
    $telefono = $_POST['telefono'];
    $mensaje = $_POST['mensaje'];

    // Aquí puedes realizar cualquier acción con los datos, como guardarlos en una base de datos o enviar un correo electrónico

    // Por ejemplo, imprimir los datos recibidos
    echo "Nombre: $nombre<br>";
    echo "Correo: $correo<br>";
    echo "Teléfono: $telefono<br>";
    echo "Mensaje: $mensaje<br>";
} else {
    // Si la solicitud no es de tipo POST, mostrar un mensaje de error
    echo "No se han recibido datos del formulario.";
}
?>